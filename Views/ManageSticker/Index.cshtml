@{
    ViewBag.Title = "Upload Sticker";
}

<script src="~/js/manageSticker/manageSticker.js?v=@Guid.NewGuid().ToString("N")"></script>
<div class="page-header">
    <h1>
        e-Co Sticker
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Upload sticker
        </small>
    </h1>
</div>
<div class="row" ng-controller="vcController">
    <div class="col-xs-12">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-xs-8 ">VC NO.</label>
            <div class="col-xs-3"><input type="text" ng-model="vc_serch" class="form-control" /></div>
            <div class="col-xs-1"><span class="btn btn-primary" ng-click="btn_search()">Search</span></div>
        </div>
    </div>    
    </div>

    <div class="col-xs-12">
        <table class="table table-striped table-bordered" id="table_vc">
            <thead>
                <tr>

                    <th class="text-center">
                        VC No.
                    </th>
                    <th class="text-center">
                        Car Model
                    </th>
                    <th class="text-center">
                        Grade
                    </th>
                    <th class="text-center">
                        #
                    </th>
                    <th class="text-center">
                        Create
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="a in data_vc">
                    <td class="text-left"><button class="btn btn-link" ng-click="click_vc(a)" type="button">{{a.VCNO}}</button></td>
                    <td class="text-left">{{a.Model}}</td>
                    <td class="text-left">{{a.Grade}}</td>

                    <td class="text-right">{{a.cnt_VINNO}}</td>
                    <td class="text-center">{{a.CreateBy}} <br /> {{a.vcCreateDate}}</td>

                </tr>

            </tbody>
        </table>
    </div>

            <div class="col-xs-12" ng-hide="gridParam.LastPage<2">
                <div class="pull-left">
                    <span class="text-muted">Page: {{gridParam.CurrentPage| number:0}} of {{gridParam.LastPage| number:0}} <em><u>Total : {{gridParam.TotalRecord| number:0}} record(s)</u></em></span>
                </div>
                <div class="pull-right">
                    <pagination total-items="gridParam.TotalRecord"
                                ng-model="gridParam.CurrentPage"
                                items-per-page="gridParam.PageSize"
                                max-size="gridParam.MaxPageSize"
                                num-pages="gridParam.LastPage"
                                class="pagination-sm"
                                boundary-links="true" rotate="false"
                                ng-change="vin_data()">

                    </pagination>
                </div>
            </div>
       
    </div>
